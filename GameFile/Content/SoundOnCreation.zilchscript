class SoundOnCreation : ZilchComponent
{
  //The sound to be played
  [Property]
  var SoundCue : SoundCue = null;
  
  function Initialize(init : CogInitializer)
  {
    //Safety Check
    if(this.SoundCue != null)
    {
      //Play Sound
      this.Space.SoundSpace.PlayCue(this.SoundCue);
    }
  }
}
